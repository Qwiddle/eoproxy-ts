{
  "compilerOptions": {
     "target": "ES2020",
     "module": "NodeNext",
     "moduleResolution": "node",
     "rootDir": "./",
     "resolveJsonModule": true, /* in case you are importing JSON files */
     "outDir": "./dist",
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}